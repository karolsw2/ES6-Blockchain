 @import url('https://fonts.googleapis.com/css?family=Lato')

// Leading colors
leading-color-1 = #2d3142
leading-color-2 = #4f5d75
leading-color-3 = #f4f4f4
leading-color-4 = #ef8354

// Defaults
border-radius = 3px
transition-duration = 0.14s
hover-opacity = 0.9

html, body
  margin 0 auto
  padding 0
  font-family 'Lato'
  color leading-color-1 
  font-size 14px
ul
  list-style-type none

.menu
  height 60px
  width 100%
  position fixed
  padding 5px 30px
  box-sizing border-box
  background leading-color-3
  display flex
  align-items center
  justify-content space-between
  z-index 3
  top 0 !important
  &__logo
    cursor pointer
    transition-duration transition-duration
    &:hover
      opacity hover-opacity
  &__buttons
    display flex
    align-items center
    justify-content center
  &__searchbar
    min-width 230px
    background white
    color leading-color-1
    border none
    border-radius border-radius
    padding 12px
    margin 0 6px
  .button
    min-width 100px
.button
  margin 0 6px
  text-align center
  background leading-color-4
  border-radius border-radius
  padding 8px 12px
  box-sizing border-box
  color white
  cursor pointer
  transition-duration transition-duration
  &:hover
    opacity hover-opacity

.dashBoard
  margin 60px auto
  display flex
  justify-content center
  align-items center
  padding 20px
  box-sizing border-box
.table
  margin 10px
  border-radius border-radius
  &__title
    width 100%
    padding 20px
    border-radius border-radius border-radius 0 0
    box-sizing border-box
    color white
    font-weight 900
    font-size 1.2em
    background leading-color-2
  table
    width 100%
    border-collapse collapse
    text-align center
  th, td
    padding 10px 20px
    box-sizing border-box
    color leading-color-4
  tr
    width 100%
    padding 10px 20px
    box-sizing border-box
    font-size 0.85em
    color leading-color-1
    transition-duration transition-duration
    &:hover
      background white
      opacity hover-opacity
    &:nth-child(odd)
      background leading-color-3
  &__index
    font-weight 700
  &__timestamp
    font-style italic
    color leading-color-2

.statsPanel
  margin 10px
  display flex
  flex-direction column
  &__stats
    width 100%
    box-sizing border-box
    padding 20px 60px
    margin 10px 0
    background leading-color-3
    color leading-color-1
    border-left 4px solid leading-color-4
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    transition-duration transition-duration
    &:hover
      opacity hover-opacity
  &__title
    text-align center
    font-size 1em
    color leading-color-2
  &__content
    text-align center
    font-size 1.4em
    font-weight 700
@media screen and (max-width: 920px)
  .dashBoard
    flex-direction column
